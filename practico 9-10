#include <iostream>
using namespace std;

void ROMANO(int n) {
    while (n >= 1000) { cout << "M"; n = n - 1000; }
    if (n >= 900) { cout << "CM"; n = n - 900; }
    if (n >= 500) { cout << "D"; n = n - 500; }
    if (n >= 400) { cout << "CD"; n = n - 400; }
    while (n >= 100) { cout << "C"; n = n - 100; }
    if (n >= 90) { cout << "XC"; n = n - 90; }
    if (n >= 50) { cout << "L"; n = n - 50; }
    if (n >= 40) { cout << "XL"; n = n - 40; }
    while (n >= 10) { cout << "X"; n = n - 10; }
    if (n == 9) { cout << "IX"; n = n - 9; }
    if (n >= 5) { cout << "V"; n = n - 5; }
    if (n == 4) { cout << "IV"; n = n - 4; }
    while (n >= 1) { cout << "I"; n = n - 1; }
}

int main() {
    int n;
    cout << "Ingrese un numero: ";
    cin >> n;
    cout << "Numero romano: ";
    ROMANO(n);
    cout << endl;
    return 0;
}
