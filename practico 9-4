#include <iostream>
using namespace std;

int FAC(int n) {
    int f = 1;
    for (int i = 1; i <= n; i++) {
        f = f * i;
    }
    return f;
}

float SERIE(int x, int n) {
    float s = 0;
    int i;
    for (i = 1; i <= n; i++) {
        int pot = 1;
        for (int j = 1; j <= i; j++) {
            pot = pot * x;
        }
        s = s + (float)pot / FAC(i);
    }
    return s;
}

int main() {
    int x, n;
    cout << "Ingrese X: ";
    cin >> x;
    cout << "Ingrese N: ";
    cin >> n;
    cout << "La suma de la serie es: " << SERIE(x, n) << endl;
    return 0;
}
