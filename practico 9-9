#include <iostream>
using namespace std;

int BINARIO_DECIMAL(int x) {
    int dec = 0;
    int base = 1;
    int dig;

    while (x > 0) {
        dig = x % 10;
        dec = dec + dig * base;
        base = base * 2;
        x = x / 10;
    }

    return dec;
}

int main() {
    int bin, dec;

    cout << "Ingrese un numero binario: ";
    cin >> bin;

    dec = BINARIO_DECIMAL(bin);

    cout << "El equivalente decimal es: " << dec << endl;

    return 0;
}

